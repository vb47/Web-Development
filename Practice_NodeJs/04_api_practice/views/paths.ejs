<!Doctype html>
<html>
    <head>
        <title>Joke Preference</title>
        <meta charset="utf-8">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Azeret+Mono&display=swap" rel="stylesheet"> 
        <link href="https://fonts.googleapis.com/css2?family=Lato&family=Montserrat&display=swap" rel="stylesheet">   
    </head>
    <style>
        body {
            margin: 0px;
            background-color: #243763;
            color: #FF6E31;
            text-align: center;
        }

        .container {
            position: relative;
            display: inline-block;
            margin: 0px;
            width: 100vh;
            height: 100vh;
        }

        .quote {
            padding-top: 30%;
            display: block;
            margin-top: auto;
        }

        h1 {
            font-family: 'Azeret Mono', monospace;
            font-style: normal;
            font-size: 180%;
        }
         .category {
            text-align: center;
        }

        h3 {
            color: #fb8959;
            font-size: 120%;
            font-family: 'Azeret Mono', monospace;
        }

        .options {
            display: inline-block;
            position: relative;
            font-family: Verdana, Geneva, Tahoma, sans-serif;
            width: 30%;
            color: white;
            margin: 4px 0px;
        }
        
        .btn {
            -webkit-border-radius: 8;
            -moz-border-radius: 8;
            border-radius: 8px;
            font-family: Arial;
            color: #FFFBEB;
            font-size: 20px;
            background: #251749;
            padding: 10px 20px 10px 20px;
            text-decoration: none;
            margin-top: 3px;
        }

        .btn:hover {
            background: #3d5eab;
            text-decoration: none;
        }
    </style>
    <body>
        <div class="container">
            <div class="quote">
                <h1>Which type of joke would you like to hear?</h1>
                <form action="/joke" method="post">
                    <div class="category">
                        <h3>Select Category</h3>
                        <div class="options"><input class="data" type="checkbox" name="Any" value="false" onchange="this.value=this.checked" checked>Any</div>
                        <div class="options"><input class="data" type="checkbox" name="Programming" value="false">Programming</div>
                        <div class="options"><input class="data" type="checkbox" name="Misc" value="false">Misc</div>
                        <div class="options"><input class="data" type="checkbox" name="Dark" value="false">Dark</div>
                        <div class="options"><input class="data" type="checkbox" name="Pun" value="false">Pun</div>
                        <div class="options"><input class="data" type="checkbox" name="Spooky" value="false">Spooky</div>
                    </div>

                    <div class="category">
                        <h3>Select flag</h3>
                        <div class="options"><input class="data" type="checkbox" name="nsfw" value="false">nsfw</div>
                        <div class="options"><input class="data" type="checkbox" name="religious" value="false">religious</div>
                        <div class="options"><input class="data" type="checkbox" name="political" value="false">political</div>
                        <div class="options"><input class="data" type="checkbox" name="racist" value="false">racist</div>
                        <div class="options"><input class="data" type="checkbox" name="sexist" value="false">sexist</div>
                    </div>
                    <div class="category">
                        <input class="btn" type="submit" placeholder="Submit" onclick="getCheckboxValue()">
                    </div>
                </form>
            </div>
        </div>
    </body>
    <script>
        
        function getCheckboxValue(){
            var checkboxes = document.getElementsByClassName("data");
            
            for(let i=0; i<checkboxes.length; i++){
                if(checkboxes[i].checked)
                    checkboxes[i].setAttribute("value", "true");
                
                console.log(checkboxes[i].getAttribute("name") + ": " + checkboxes[i].getAttribute("value"));
                checkboxes[i].checked = true;
            }
        }

    </script>
</html>